<?xml version="1.0" encoding="utf-8"?>
<manifest package="act.muzikator"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.SelfLearningActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.ClassroomActivity">
        </activity>
        <activity android:name=".activity.PlaygroundActivity">
        </activity>
        <activity android:name=".activity.PitchingActivity">
        </activity>
    </application>

</manifest>
